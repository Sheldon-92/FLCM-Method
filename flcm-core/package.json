{
  "name": "flcm-core",
  "version": "2.0.0",
  "description": "FLCM 2.0 - AI-Powered Learning Companion",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage --coverageReporters=html --coverageReporters=text-summary",
    "test:coverage:check": "jest --coverage --passWithNoTests && node -e \"const c=require('./coverage/coverage-summary.json').total; process.exit(c.lines.pct<80||c.branches.pct<75||c.functions.pct<85||c.statements.pct<80?1:0)\"",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts'",
    "test:unit": "jest --testMatch='**/__tests__/**/*.test.ts'",
    "test:performance": "node ../test-phase2-performance.js",
    "test:uat": "node ../test-user-acceptance.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:uat",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "quality:check": "npm run lint && npm run type-check && npm run format:check && npm run test:coverage:check",
    "prepare": "echo 'Skipping husky install in CI'",
    "precommit": "lint-staged",
    "docs:api": "typedoc --out docs/api --entryPoints agents/types.ts index.ts --theme default --readme README.md --includeVersion",
    "docs:build": "vuepress build docs",
    "docs:dev": "vuepress dev docs",
    "docs:generate": "npm run docs:api && npm run docs:build",
    "health:check": "node dist/shared/health-check.js",
    "monitoring:start": "node dist/shared/monitoring.js"
  },
  "keywords": [
    "flcm",
    "learning",
    "ai",
    "obsidian",
    "knowledge-management"
  ],
  "author": "FLCM Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "yaml": "^2.3.4",
    "js-yaml": "^4.1.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.8",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "typedoc": "^0.25.4",
    "@vuepress/client": "^2.0.0-rc.0",
    "vuepress": "^2.0.0-rc.0",
    "@vuepress/theme-default": "^2.0.0-rc.0"
  },
  "directories": {
    "test": "tests"
  },
  "type": "commonjs"
}
