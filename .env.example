# FLCM Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
PORT=3000
HOST=localhost
APP_NAME=FLCM
APP_VERSION=1.0.0

# ============================================
# SECURITY
# ============================================
# Generate secure keys: openssl rand -hex 32
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# CACHE CONFIGURATION
# ============================================
# Options: memory, redis, file
CACHE_TYPE=memory
CACHE_TTL=3600000
CACHE_MAX_SIZE=100

# Redis (if CACHE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# DATABASE (Optional)
# ============================================
# PostgreSQL connection
DATABASE_URL=postgresql://user:password@localhost:5432/flcm
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# WORKFLOW CONFIGURATION
# ============================================
# Default workflow settings
DEFAULT_MODE=standard
DEFAULT_PLATFORMS=linkedin,twitter
DEFAULT_VOICE_PROFILE=professional
MAX_CONCURRENT_WORKFLOWS=5
WORKFLOW_TIMEOUT=3600000

# Agent timeouts (milliseconds)
COLLECTOR_TIMEOUT=600000
SCHOLAR_TIMEOUT=900000
CREATOR_TIMEOUT=1200000
ADAPTER_TIMEOUT=900000

# Quality thresholds
MIN_RICE_SCORE=40
MIN_DEPTH_LEVEL=2
MIN_ENGAGEMENT_SCORE=60
MIN_PLATFORM_FIT=70

# ============================================
# ANALYTICS
# ============================================
ANALYTICS_ENABLED=true
ANALYTICS_FLUSH_INTERVAL=60000
ANALYTICS_DATA_DIR=./data/analytics
ANALYTICS_MAX_EVENTS=10000

# ============================================
# USER SERVICE
# ============================================
USER_DATA_DIR=./data/users
MAX_USERS=1000
USER_SESSION_TIMEOUT=86400000
ENABLE_USER_REGISTRATION=true

# ============================================
# LOGGING
# ============================================
# Levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/flcm.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_COMPRESSION=true

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=txt,md,json,csv,pdf

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
# AI Services
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-2

# Social Media APIs
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
TWITTER_API_KEY=
TWITTER_API_SECRET=
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# Analytics Services
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
SEGMENT_WRITE_KEY=

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
EMAIL_ENABLED=false
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@flcm.com

# ============================================
# MONITORING
# ============================================
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_CACHE=true
ENABLE_ANALYTICS=true
ENABLE_USER_PROFILES=true
ENABLE_BATCH_PROCESSING=false
ENABLE_WEBHOOKS=false
ENABLE_PLUGINS=false

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
VERBOSE_LOGGING=false
MOCK_AGENTS=false
SKIP_AUTH=false

# ============================================
# DEPLOYMENT
# ============================================
# Docker
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# Kubernetes
K8S_NAMESPACE=default
K8S_REPLICAS=3

# PM2
PM2_INSTANCES=max
PM2_EXEC_MODE=cluster