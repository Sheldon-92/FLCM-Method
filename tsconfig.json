{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", 
    "lib": ["ES2020"],
    "outDir": "./flcm-core/dist",
    "rootDir": "./flcm-core",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@agents/*": ["./flcm-core/agents/*"],
      "@tasks/*": ["./flcm-core/tasks/*"],
      "@methodologies/*": ["./flcm-core/methodologies/*"],
      "@shared/*": ["./flcm-core/shared/*"]
    }
  },
  "include": ["flcm-core/**/*.ts"],
  "exclude": ["node_modules", "dist", "flcm-core/archive", "flcm-core/dist"]
}