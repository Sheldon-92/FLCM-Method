{
  "name": "flcm",
  "version": "1.0.0",
  "description": "Friction Lab Content Maker - AI-powered content creation platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:prod": "tsc --project tsconfig.prod.json",
    "start": "node dist/cli/flcm-cli.js",
    "start:api": "node dist/api/flcm-api.js",
    "start:prod": "NODE_ENV=production node dist/cli/flcm-cli.js",
    "dev": "ts-node flcm-core/cli/flcm-cli.ts",
    "dev:api": "ts-node flcm-core/api/flcm-api.ts",
    "test": "echo 'Tests will be added for full implementation' && exit 0",
    "test:demos": "echo 'Demo tests not available in minimal build' && exit 0",
    "demo:all": "echo 'Full demos available in complete implementation' && exit 0",
    "lint": "echo 'Linting will be added for full implementation' && exit 0",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "clean": "rm -rf dist .flcm-cache .flcm-analytics .flcm-users",
    "docker:build": "docker build -t flcm:latest .",
    "docker:run": "docker run -p 3000:3000 flcm:latest",
    "docker:compose": "docker-compose up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "backup": "./scripts/backup.sh",
    "health": "curl http://localhost:3000/health"
  },
  "bin": {
    "flcm": "./dist/cli/flcm-cli.js"
  },
  "keywords": [
    "content-creation",
    "ai",
    "multi-platform",
    "automation",
    "marketing",
    "social-media"
  ],
  "author": "Friction Lab",
  "license": "MIT",
  "dependencies": {
    "commander": "^9.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.0.0",
    "uuid": "^9.0.0",
    "dotenv": "^16.0.0",
    "winston": "^3.8.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^4.9.0",
    "ts-node": "^10.9.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "prettier": "^2.8.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "optionalDependencies": {
    "redis": "^4.0.0",
    "pg": "^8.8.0",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.0",
    "ora": "^5.4.1",
    "cli-table3": "^0.6.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sheldon-92/FLCM-Method.git"
  },
  "bugs": {
    "url": "https://github.com/Sheldon-92/FLCM-Method/issues"
  },
  "homepage": "https://github.com/Sheldon-92/FLCM-Method#readme"
}